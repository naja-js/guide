{templateType Naja\Guide\Application\UI\Components\AddToBasketButton\AddToBasketButtonTemplate}

<div class="addToBasket">
    {if ! hasItem()}
        <a n:href="add!" class="addToBasket-button ajax">
            Add to Basket
        </a>
    {else}
        <form n:name="form" class="ajax">
            <button n:name="subtract" />
            {$item->amount}
            <button n:name="add" />
        </form>
    {/if}
</div>
